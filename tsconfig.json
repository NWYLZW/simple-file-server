{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "esnext", "dom"
    ],
    "declaration": false,
    "outDir": "./dist",
    "removeComments": false,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "types": [ "node" ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [ "src/**/*.ts" ],
  "exclude": [ "node_modules" ]
}
